<form class="mt-4" name="container-form" method="POST" action="/courses/handle-form-actions">
  <div>
    <h3>My courses</h3>
    <a href="/me/trash/courses">Trash bin ({{deletedCourses}})</a>
  </div>

  <div class="mt-4 d-flex align-items-center">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="checkbox-all">
      <label class="form-check-label" for="checkbox-all">
        Select all
      </label>
    </div>
    <select class="form-select form-select-sm check-all-options" aria-label="Default select example" name="action"
      required>
      <option value="" selected>-- Options --</option>
      <option value="delete">Delete</option>
    </select>

    <button class="btn btn-primary btn-sm disabled" id="execute-btn">Execute</button>
  </div>

  <table class="table mt-4">
    <thead>
      <tr>
        <th scope="col" colspan="2">#</th>
        <th scope="col">
          Name
          {{{sortable 'name' _sort}}}
        </th>
        <th scope="col">
          Description
          {{{sortable 'description' _sort}}}
        </th>
        <th scope="col" colspan="3">
          Updated At
          {{{sortable 'updatedAt' _sort}}}
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each courses}}
      <tr>
        <td>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="courseIds[]" value="{{this._id}}">
          </div>
        </td>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td>{{this.description}}</td>
        <td>{{this.updatedAt}}</td>
        <td>
          <a href="/courses/{{this._id}}/edit">Update</a>
        </td>
        <td>
          <a href="" data-bs-toggle="modal" data-bs-target="#deleteModal" data-bs-id="{{this._id}}">Delete</a>
        </td>
      </tr>
      {{else}}
      <td colspan="5" class="text-center">
        You haven't upload any courses.
        <a href="/courses/create">Upload a course</a>
      </td>


      {{/each}}
    </tbody>
  </table>
</form>

<div id="deleteModal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Deleting course?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this course?</p>
      </div>
      <div class="modal-footer">
        <button type="button" id="delete-modal-btn" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<form name="delete-course-form" method="POST"></form>

<script>
  const deleteModal = document.getElementById('deleteModal');
  const deleteModalBtn = document.getElementById('delete-modal-btn');
  const deleteForm = document.forms['delete-course-form'];
  const containerForm = document.forms['container-form'];

  const checkboxAll = $('#checkbox-all');
  const checkboxCourse = $('input[name="courseIds[]"]');
  const executeBtn = $('#execute-btn');
  var courseId;

  if (deleteModal) {
    deleteModal.addEventListener('show.bs.modal', event => {
      // Button that triggered the modal
      const deleteBtn = event.relatedTarget;
      // Extract info from data-bs-* attributes
      courseId = deleteBtn.getAttribute('data-bs-id');
    });

    deleteModalBtn.onclick = function () {
      deleteForm.action = `/courses/${courseId}?_method=DELETE`;
      deleteForm.submit();
    }
  }

  // check box all change
  checkboxAll.change(function () {
    var isChecked = $(this).prop('checked');
    checkboxCourse.prop('checked', isChecked);
    renderExecuteBtn();
  });

  // check box course change
  checkboxCourse.change(function () {
    var isCheckedAll = checkboxCourse.length === $('input[name="courseIds[]"]:checked').length;
    checkboxAll.prop('checked', isCheckedAll);
    renderExecuteBtn();
  })

  // execute button click
  executeBtn.on('submit', function (e) {
    const isSubmittable = !$(this).hasClass('disabled');
    if (!isSubmittable) {
      e.preventDefault();
    }
  });

  // Re-render execute button
  function renderExecuteBtn() {
    var courseCheckedLength = $('input[name="courseIds[]"]:checked').length;
    if (courseCheckedLength > 0) {
      executeBtn.removeClass('disabled');
    } else {
      executeBtn.addClass('disabled');
    }
  }

</script>